<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/roten"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <include
        android:id="@+id/include3"
        layout="@layout/activity_common"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape"
        android:fontFamily="@font/kosugimaru_regular"
        android:gravity="center_horizontal"
        android:paddingTop="11dp"
        android:paddingBottom="0dp"
        android:text="@string/ohurocchi"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:backgroundTint="#C4FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".055"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".7" />


    <TextView
        android:id="@+id/textView25"
        android:layout_width="173dp"
        android:layout_height="96dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="400dp"
        android:layout_weight="1"
        android:background="@drawable/bg_balloon"
        android:lineSpacingExtra="4sp"
        android:padding="8dp"
        android:text="えー、さっき食べたばっかりだよ。もう少し我慢しようよ。"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- marginLeft="-6dp"することで角丸のTextViewに`◆`を重ねている。 -->

    <View
        android:layout_width="9dp"
        android:layout_height="19dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="-30dp"
        android:background="@android:color/white"
        android:rotation="45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/woman"
        android:scaleX="2.5"
        android:scaleY="2.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".28"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.733"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".536" />

    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button_ripple"
        android:backgroundTint="@null"
        android:contentDescription="@string/bathbtn"
        android:elevation="10dp"
        android:fontFamily="@font/yujimai_regular"
        android:freezesText="false"
        android:onClick="button1"
        android:scaleType="centerCrop"
        android:text="@string/bath_btn"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:icon="@drawable/ohurohome_1"
        app:iconGravity="top"
        app:iconSize="65sp"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".192"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.306"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".4"
        tools:ignore="TextContrastCheck,DuplicateClickableBoundsCheck" />


    <Button
        android:id="@+id/bathlog"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/circle_view"
        android:backgroundTint="@null"
        android:elevation="10dp"
        android:fontFamily="@font/kosugimaru_regular"
        android:freezesText="false"
        android:onClick="button1"
        android:scaleType="centerCrop"
        android:text="@string/bathlog"
        android:textColor="@color/black"
        android:textSize="11.5dp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:icon="@drawable/bathlog"
        app:iconGravity="top"
        app:iconSize="30sp"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".11"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.164"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".22"
        tools:ignore="TextContrastCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>